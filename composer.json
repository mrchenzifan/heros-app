{
    "name": "zy/api",
    "description": "zy php framework  workerman",
    "require": {
        "php": ">=8.0",
        "mondagroup/heros-worker": "v2.1.*",
        "ext-curl": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpunit/phpunit": "^8.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "files": [
            "./app/function.php"
        ]
    },
    "suggest": {
        "ext-event": "For better performance. "
    },
    "scripts": {
        "cs": "composer dump -o && php-cs-fixer fix $1"
    },
    "config": {
        "allow-plugins": {
            "easywechat-composer/easywechat-composer": true
        }
    }
}
